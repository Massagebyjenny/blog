---
layout: layouts/base.njk
title: Blog Admin
---

<section class="section">
  <div class="container">
    <h1>Blog Posts</h1>

    <div class="cards">
      {% for post in collections.posts | reverse %}
        <article class="card">
          <h2 class="card-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>

          {% if post.date %}
            <div class="muted">{{ post.date }}</div>
          {% endif %}

          {% if post.data.summary %}
            <p>{{ post.data.summary }}</p>
          {% endif %}
        </article>
      {% endfor %}
    </div>
  </div>
</section>
