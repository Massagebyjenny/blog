    <a href="/blog/" class="muted">â† Back to Blog</a>
    <h1>{{ title }}</h1>

    {% if page.date %}
      <div class="muted">{{ page.date }}</div>
    {% endif %}

    {% if cover %}
      <img src="{{ cover }}" alt="" style="width:100%;border-radius:14px;margin-top:14px;" />
