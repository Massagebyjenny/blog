---
layout: layouts/base.njk
---

<article class="post container">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    {% if date %}
      <p class="post-meta">{{ date }}</p>
    {% endif %}
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
